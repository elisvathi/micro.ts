{
	"compilerOptions": {
		"allowJs": true,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": ["es7"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noLib": false,
		"noUnusedLocals": false,
		"outDir": "./lib",
		"removeComments": false,
		"rootDir": "./src",
		"skipLibCheck": true,
		"sourceMap": false,
		"strict": true,
		"target": "es6",
		"types": ["node", "mocha", "chai"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "lib", "**/*.spec.ts"]
}
