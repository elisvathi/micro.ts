{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strict": true,
		"types": ["node", "mocha", "chai"],
		"outDir": "lib",
		"rootDir": "src"
	},
	"exclude": ["node_modules", "lib", "tests"],
	"include": ["src/**/*"]
}
