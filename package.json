        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@types/chalk": "^2.2.0",
        "@types/hapi": "^18.0.2",
        "@types/amqplib": "^0.5.13",
        "joi": "^14.3.1",
        "joi-typescript-validator": "0.0.4",
        "@types/joi": "^14.3.3",
        "@types/node": "^12.7.8",
        "@types/reflect-metadata": "^0.1.0",
        "chai": "^4.2.0",
        "mocha": "^5.2.0",
        "nodemon": "^1.19.0",
        "rimraf": "^2.6.3",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5"
