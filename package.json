{
  "name": "@micro.ts/core",
  "version": "0.0.30",
  "description": "Microservice framework with Typescript",
  "main": "lib/index.js",
  "scripts": {
    "start": "npx ts-node --project=tsconfig.playground.json ./playground/playground.ts",
    "update": "npx npm-auto-version && npm run build && npm publish",
    "dev": "nodemon",
    "build": "./node_modules/typescript/bin/tsc -p tsconfig.json",
    "build:watch": "./node_modules/typescript/bin/tsc -w -p tsconfig.json",
    "lint": "./node_modules/tslint/bin/tslint -t stylish --project \"tsconfig.json\"",
    "test": "./node_modules/.bin/mocha -r ts-node/register tests/**/*.spec.ts",
    "clean": "./node_modules/rimraf/bin.js lib"
  },
  "keywords": [],
  "author": "Elis Vathi",
  "license": "MIT",
  "dependencies": {
    "amqplib": "^0.5.5",
    "chalk": "^2.4.2",
    "hapi": "^18.1.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.13",
    "@types/chai": "^4.2.3",
    "@types/chalk": "^2.2.0",
    "@types/hapi": "^18.0.2",
    "@types/joi": "^14.3.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.9",
    "@types/reflect-metadata": "^0.1.0",
    "@types/socket.io": "^2.1.3",
    "chai": "^4.2.0",
    "joi": "^14.3.1",
    "joi-typescript-validator": "0.0.4",
    "mocha": "^5.2.0",
    "nodemon": "^1.19.0",
    "npm-auto-version": "^1.0.0",
    "rimraf": "^2.6.3",
    "ts-node": "^8.4.1",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elisvathi/micro.ts.git"
  }
}
