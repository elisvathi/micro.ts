{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"declaration": true,
		"sourceMap": false,
		"outDir": "./lib",
		"strict": true,
		"rootDir": "./src",
		"removeComments": false,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"types": ["node", "mocha", "chai"],
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "lib", "**/*.spec.ts"]
}
